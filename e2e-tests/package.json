{
  "name": "star-trek-diplomacy-e2e",
  "version": "0.1.0",
  "description": "End-to-end Selenium tests for Star Trek Diplomacy",
  "scripts": {
    "test": "jest --runInBand",
    "test:docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from tests",
    "test:docker:build": "docker-compose -f docker-compose.test.yml build",
    "test:headed": "HEADLESS=false jest --runInBand",
    "selenium:up": "docker-compose -f docker-compose.selenium.yml up -d",
    "selenium:down": "docker-compose -f docker-compose.selenium.yml down"
  },
  "dependencies": {
    "selenium-webdriver": "^4.15.0",
    "jest": "^29.7.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "chromedriver": "^119.0.1"
  }
}
