# API Configuration
VITE_API_URL=http://localhost:3000

# Dev Mode - Set to 'true' to bypass Clerk authentication for local testing
# This enables testing with multiple browser windows as different players
VITE_DEV_MODE=true

# Clerk Authentication (only needed if VITE_DEV_MODE is false)
# Get these from https://dashboard.clerk.com/
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# Feature Flags
VITE_ENABLE_AI_PLAYERS=false
VITE_ENABLE_SPECTATOR_MODE=false
