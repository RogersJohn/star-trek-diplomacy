# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Connection (REQUIRED)
# Railway provides this automatically when you add PostgreSQL addon
# For local development, use a local Postgres instance or a cloud DB
DATABASE_URL=postgresql://user:password@localhost:5432/star_trek_diplomacy

# Clerk Authentication (optional - app works in dev mode without it)
# Get these from https://dashboard.clerk.com/
# CLERK_SECRET_KEY=sk_test_your_key_here
# CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# Game Configuration
MAX_LOBBIES=100
TURN_TIME_LIMIT_MINUTES=1440
